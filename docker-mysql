version: '3'
services:
  notify-backend:
    image: vivaconagua/notify-backend:stage
    networks:
      - vca-net
    build: .
    env_file:
      - config/.env
    container_name: notify-backend
    restart: unless-stopped
    links: 
        - notify-database:db
        - nats
    environment:
        - HOST=notify-database
        - "NATS_URI=nats://nats:4222"
    ports:
      - "8005:8005"
    depends_on:
      - nats


  notify-database:
    image: mysql
    container_name: notify-database
    networks:
      - vca-net
    environment:
      - MYSQL_DATABASE=notifydb
      - MYSQL_USER=notify
      - MYSQL_PASSWORD=notify
      - MYSQL_ROOT_PASSWORD=notify
    ports:
      - "3307:3306"
    volumes:
      - ./config/db_dump:/docker-entrypoint-initdb.d

  nats:
    image: 'nats:0.8.0'
    entrypoint: "/gnatsd -DV"
    networks:
      - vca-net
    expose:
      - "4222"
    ports:
      - "8222:8222"
    hostname: nats-server

networks:
  vca-net:
    driver: bridge
